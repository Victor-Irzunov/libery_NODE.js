<h1>Редактировать  курс {{course.title}}</h1>

<form action="/kurs/edit" method="POST">

	<div class="input-field">
		<input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
		<label for="title">Название курса</label>
		<span class="helper-text" data-error="введите название">Helper text</span>
	</div>

	<div class="input-field">
		<input id="price" name="price" type="number" class="validate" min="1" required value="{{course.price}}">
		<label for="price">Цена курса</label>
		<span class="helper-text" data-error="wrong">Helper text</span>
	</div>

	<div class="input-field">
		<input id="img" type="text" name="img" class="validate" required value="{{course.img}}">
		<label for="img">URL img</label>
		<span class="helper-text" data-error="введите url картинки" data-success="right">Helper text</span>
	</div>

	<input type="hidden" name="id" id="" value="{{course.id}}">          <!--<Input type = "hidden"> определяет скрытое поле ввода.-->

	<button class="btn btn-primary">Редактировать Курс</button>
</form>